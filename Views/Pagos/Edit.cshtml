@model InmobiliariaApp.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

<h1>Editar Pago</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdPago" />

    <div class="mb-3">
        <label asp-for="IdContrato" class="form-label">Contrato</label>
        <select asp-for="IdContrato" class="form-select" asp-items="ViewBag.Contratos"></select>
        <span asp-validation-for="IdContrato" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Importe" class="form-label"></label>
        <input asp-for="Importe" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Importe" class="text-danger"></span>
    </div>

