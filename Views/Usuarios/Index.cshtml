@model IEnumerable<InmobiliariaApp.Models.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">‚ûï Crear nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Avatar</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Apellido</td>
            <td>@item.Email</td>
            <td>@item.Rol</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Avatar))
                {
                    <img src="@item.Avatar" alt="Avatar" width="40" height="40" class="rounded-circle" />
                }
                else
                {
                    <span class="text-muted">Sin avatar</span>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-warning btn-sm">‚úè Editar</a>
                <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info btn-sm text-white">‚Ñπ Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-danger btn-sm">üóë Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
