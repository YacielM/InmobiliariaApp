@model InmobiliariaApp.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h1>Detalles del Usuario</h1>

<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Apellido</dt>
    <dd class="col-sm-9">@Model.Apellido</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Rol</dt>
    <dd class="col-sm-9">@Model.Rol</dd>

    <dt class="col-sm-3">Avatar</dt>
    <dd class="col-sm-9">
        @if (!string.IsNullOrEmpty(Model.Avatar))
        {
            <img src="@Model.Avatar" alt="Avatar" width="80" height="80" class="rounded-circle" />
        }
        else
        {
            <span class="text-muted">Sin avatar</span>
        }
    </dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.IdUsuario" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
