@model IEnumerable<InmobiliariaApp.Models.Contrato>

@{
    ViewData["Title"] = "Listado de Contratos";
}

@if (TempData["Msg"] != null)
{
    <div class="alert alert-info">@TempData["Msg"]</div>
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">‚ûï Crear nuevo</a>
    <a asp-action="Vigentes" class="btn btn-success ms-2">üìÖ Ver vigentes</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Estado</th>
            <th>Contrato</th>
            <th>Inmueble</th>
            <th>Inquilino</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Estado</td>
            <td>Contrato #@item.IdContrato</td>
            <td>@item.Inmueble?.Direccion</td>
            <td>@item.Inquilino?.NombreCompleto</td>
            <td>@item.FechaInicio.ToShortDateString()</td>
            <td>@item.FechaFin.ToShortDateString()</td>
            <td>@item.MontoMensual.ToString("C")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdContrato" class="btn btn-info btn-sm text-white">‚Ñπ Detalles</a>

                @* Acciones din√°micas seg√∫n estado *@
                @if (item.Estado == "Vigente")
                {
                    <a asp-action="TerminarAnticipado" asp-route-id="@item.IdContrato" class="btn btn-outline-danger btn-sm">‚õî Terminar</a>
                }
                else if (item.Estado == "Finalizado")
                {
                    <a asp-action="Renovar" asp-route-id="@item.IdContrato" class="btn btn-outline-primary btn-sm">üîÅ Renovar</a>
                }
                else if (item.Estado == "Multado")
                {
                    <a asp-action="PagarMulta" asp-route-id="@item.IdContrato" class="btn btn-outline-success btn-sm">üíµ Pagar multa</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
