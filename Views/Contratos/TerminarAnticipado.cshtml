@{
    ViewData["Title"] = "Terminar contrato anticipadamente";
    var contrato = ViewBag.Contrato as InmobiliariaApp.Models.Contrato;
    var sugerido = ViewBag.SugeridoMulta as decimal? ?? 0m;
}

<h1>Terminar contrato anticipadamente</h1>

<div class="alert alert-warning">
    Va a terminar el contrato #@contrato?.IdContrato del inmueble @contrato?.Inmueble?.Direccion
    con fecha de corte @DateTime.Today.ToShortDateString()
</div>

<form asp-action="TerminarAnticipadoConfirmado" method="post">
    <input type="hidden" name="id" value="@contrato?.IdContrato" />
    <div class="mb-3">
        <label class="form-label">Multa</label>
        <input type="number" step="0.01" name="multa" class="form-control" value="@sugerido" />
        <div class="form-text">Sugerido: @sugerido.ToString("C")</div>
    </div>
    <button type="submit" class="btn btn-danger">Confirmar terminaci√≥n</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
